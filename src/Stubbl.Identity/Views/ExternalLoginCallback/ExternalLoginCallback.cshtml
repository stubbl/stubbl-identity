@using Stubbl.Identity.Models.ExternalLoginCallback

@model ExternalLoginCallbackViewModel

<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="page-header">
            <h2 class="mb-4">
                You've logged in with <u>@Model.LoginProvider</u> @Html.LoginProviderIcon(Model.LoginProvider)
            </h2>
        </div>

        @if (ViewContext.ModelState.TryGetValue(ViewData.TemplateInfo.HtmlFieldPrefix, out var modelState))
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="ModelOnly" class="danger"></div>
            </div>
        }

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="FirstName">First name</label>
                        <input type="text" asp-for="FirstName" class="form-control"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="LastName">Last name</label>
                        <input type="text" asp-for="LastName" class="form-control"/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress">Email address</label>
                <input type="email" asp-for="EmailAddress" class="form-control"/>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    Register
                </button>
            </div>

            <div class="form-group">
                Already registered? <a asp-route="Login" asp-route-returnUrl="@Model.ReturnUrl" data-append="#@Html.IdFor(m => m.EmailAddress)">Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScripts")
}