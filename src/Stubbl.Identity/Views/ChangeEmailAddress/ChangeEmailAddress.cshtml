@using Stubbl.Identity.Models.ChangeEmailAddress

@model ChangeEmailAddressInputModel

<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="page-header">
            <h1 class="mb-5 display-4">
                Change your email address
            </h1>
        </div>

        @Html.Partial("_ValidationSummary")

        <form method="post">
            <div class="form-group">
                <label asp-for="EmailAddress">Email address</label>
                <input type="email" asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Change</button>
                <a asp-route="Home" class="btn btn-link btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScripts")
}
