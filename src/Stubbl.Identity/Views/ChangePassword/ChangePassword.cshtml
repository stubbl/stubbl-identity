@using Stubbl.Identity.Models.ChangePassword

@model ChangePasswordInputModel

<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="page-header">
            <h1 class="mb-5 display-4">
                Change your password
            </h1>
        </div>

        @Html.Partial("_ValidationSummary")

        <form method="post">
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password</label>
                <input type="password" asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Change</button>
                <a asp-route="Home" class="btn btn-secondary btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScripts")
}
