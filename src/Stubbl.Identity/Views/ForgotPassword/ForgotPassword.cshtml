@using Stubbl.Identity.Models.ForgotPassword
@model Stubbl.Identity.Models.ForgotPassword.ForgotPasswordViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="page-header">
            <h1 class="mb-5 display-4">
                Forgotten your password?
            </h1>
        </div>

        <p class="alert alert-info">
            We need to send a verification email before we can reset your password.
        </p>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label asp-for="EmailAddress">Email address</label>
                <input type="email" asp-for="EmailAddress" class="form-control"/>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Send</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScripts")
}