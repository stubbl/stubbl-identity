@using Stubbl.Identity.Models.ResetPassword

@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="page-header">
            <h1 class="mb-5 display-4">
                Reset your password
            </h1>
        </div>

        @if (ViewContext.ModelState.TryGetValue(ViewData.TemplateInfo.HtmlFieldPrefix, out var modelState))
        {
            <p class="alert alert-danger">
                <div asp-validation-summary="ModelOnly" class="danger"></div>
            </p>
        }

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" asp-for="Code"/>

            <div class="form-group">
                <label asp-for="EmailAddress">Email address</label>
                <input type="email" asp-for="EmailAddress" class="form-control"/>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScripts")
}